<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/c_background">
    <include android:id="@+id/topbar"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             layout="@layout/fragment_topbar"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/topbar"
                android:layout_above="@+id/tabbar">
        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/c_background"
                      android:padding="20dp">
            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="start"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/intro_3_title"
                                                        style="@style/c_title"/>
            <View android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:layout_marginBottom="20dp"
                  style="@style/c_divider"/>

            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/intro_3_text_h_0"
                                                        style="@style/c_text_h"/>
            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/intro_3_text_p_0"
                                                        style="@style/c_text_p"/>

            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/intro_3_text_h_1"
                                                        style="@style/c_text_h"/>
            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/intro_3_text_p_1"
                                                        style="@style/c_text_p"/>

            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/intro_3_text_h_2"
                                                        style="@style/c_text_h"/>
            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/intro_3_text_p_2"
                                                        style="@style/c_text_p"/>

            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/intro_3_text_h_3"
                                                        style="@style/c_text_h"/>
            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/intro_3_text_p_3"
                                                        style="@style/c_text_p"/>

            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/intro_3_text_h_4"
                                                        style="@style/c_text_h"/>
            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/intro_3_text_p_4"
                                                        style="@style/c_text_p"/>

            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/intro_3_text_h_5"
                                                        style="@style/c_text_h"/>
            <de.bmas.einfach_erfasst.views.FontTextView android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginBottom="20dp"
                                                        android:text="@string/intro_3_text_p_5"
                                                        style="@style/c_text_p"/>
            <de.bmas.einfach_erfasst.views.FontTextView android:id="@+id/intro_text_a_5"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="@string/intro_3_text_a_5"
                                                        style="@style/c_text_a"/>
        </LinearLayout>
    </ScrollView>
    <include android:id="@+id/tabbar"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             layout="@layout/fragment_tabbar_3"/>
</RelativeLayout>
