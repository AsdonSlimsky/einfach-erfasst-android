<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/tl_header"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp">
        <de.bmas.einfach_erfasst.views.FontButton android:id="@+id/tl_hd_button_add"
                                                  android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:text="@string/tl_hd_button_add"
                                                  style="@style/tl_hd_button_left"/>
        <de.bmas.einfach_erfasst.views.FontButton android:id="@+id/tl_hd_button_select"
                                                  android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:text="@string/tl_hd_button_select"
                                                  style="@style/tl_hd_button_right"/>
        <de.bmas.einfach_erfasst.views.FontButton android:id="@+id/tl_hd_button_cancel"
                                                  android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:text="@string/tl_hd_button_cancel"
                                                  android:visibility="gone"
                                                  style="@style/tl_hd_button_right"/>
    </RelativeLayout>
</LinearLayout>
